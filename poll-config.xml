<?xml version="1.0" encoding="UTF-8"?>
<poll-config>
    <!-- Basic Poll Information -->
    <title>GitHub Project Feedback Poll</title>
    <subtitle>Help us improve by sharing your thoughts</subtitle>
    
    <!-- Google Apps Script Web App URL -->
    <googleAppsScriptUrl>https://script.google.com/macros/s/AKfycbxbRcAe0S5ONJ8sHwUcBc99_h36aylV18qps1jgSNFy7aYZndwph7x-Lw9l_v8fulFK/exec</googleAppsScriptUrl>
    
    <!-- Questions Configuration -->
    <questions>
        <question id="question1">
            <label>What features would you like to see added to this project?</label>
            <placeholder>Share your ideas for new features, improvements, or functionality...</placeholder>
            <required>true</required>
        </question>
        
        <question id="question2">
            <label>How can we improve the overall user experience?</label>
            <placeholder>Tell us about your experience, pain points, and suggestions for better usability...</placeholder>
            <required>true</required>
        </question>
        
        <!-- You can add more questions by uncommenting and modifying below -->
        <!--
        <question id="question3">
            <label>What is your experience level with this type of project?</label>
            <placeholder>Beginner, Intermediate, Advanced, or describe your background...</placeholder>
            <required>false</required>
        </question>
        
        <question id="question4">
            <label>Any additional comments or suggestions?</label>
            <placeholder>Feel free to share any other thoughts or feedback...</placeholder>
            <required>false</required>
        </question>
        -->
    </questions>
    
    <!-- Display Settings -->
    <settings>
        <theme>modern</theme>
        <showProgressBar>false</showProgressBar>
        <allowAnonymous>true</allowAnonymous>
        <maxResponseLength>1000</maxResponseLength>
    </settings>
    
    <!-- Notification Settings -->
    <notifications>
        <successMessage>Thank you! Your feedback has been submitted successfully.</successMessage>
        <errorMessage>There was an error submitting your feedback. Please try again.</errorMessage>
        <emailNotification>your-email@example.com</emailNotification>
    </notifications>
</poll-config>
